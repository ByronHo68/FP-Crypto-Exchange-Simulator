
FROM node:18-alpine AS build

WORKDIR /app

COPY package*.json ./

RUN npm install

ARG REACT_APP_FIREBASE_SIGN_IN_URL
ARG REACT_APP_FIREBASE_API_KEY
ARG REACT_APP_WEBSOCKET_URL
ARG REACT_APP_BACKEND_BASE_URL
ARG REACT_APP_SETTING_TRADER_URL
ARG REACT_APP_SIGNUP_URL
ARG REACT_APP_SIGNUP_ADMIN_URL
ARG REACT_APP_ADMIN_WALLETS_URL
ARG REACT_APP_ADMIN_TRADERS_URL
ARG REACT_APP_SETTING_URL
ARG REACT_APP_ADMIN_ORDERS_URL
ARG REACT_APP_TRADER_DATA_RUL
ARG REACT_APP_TRANSFER
ARG REACT_APP_ORDER



RUN echo "REACT_APP_FIREBASE_SIGN_IN_URL=${REACT_APP_FIREBASE_SIGN_IN_URL}" > .env
RUN echo "REACT_APP_FIREBASE_API_KEY=${REACT_APP_FIREBASE_API_KEY}" > .env
RUN echo "REACT_APP_WEBSOCKET_URL=${REACT_APP_WEBSOCKET_URL}" > .env
RUN echo "REACT_APP_BACKEND_BASE_URL=${REACT_APP_BACKEND_BASE_URL}" > .env
RUN echo "REACT_APP_SETTING_TRADER_URL=${REACT_APP_SETTING_TRADER_URL}" > .env
RUN echo "REACT_APP_SIGNUP_URL=${REACT_APP_SIGNUP_URL}" > .env
RUN echo "REACT_APP_ADMIN_WALLETS_URL=${REACT_APP_ADMIN_WALLETS_URL}" > .env
RUN echo "REACT_APP_ADMIN_TRADERS_URL=${REACT_APP_ADMIN_TRADERS_URL}" > .env
RUN echo "REACT_APP_SETTING_URL=${REACT_APP_SETTING_URL}" > .env
RUN echo "REACT_APP_ADMIN_ORDERS_URL=${REACT_APP_ADMIN_ORDERS_URL}" > .env
RUN echo "REACT_APP_TRADER_DATA_RUL=${REACT_APP_TRADER_DATA_RUL}" > .env
RUN echo "REACT_APP_TRANSFER=${REACT_APP_TRANSFER}" > .env
RUN echo "REACT_APP_ORDER=${REACT_APP_ORDER}" > .env
RUN echo "REACT_APP_SIGNUP_ADMIN_URL=${REACT_APP_SIGNUP_ADMIN_URL}" > .env



ENV REACT_APP_FIREBASE_SIGN_IN_URL=${REACT_APP_FIREBASE_SIGN_IN_URL}
ENV REACT_APP_FIREBASE_API_KEY=${REACT_APP_FIREBASE_API_KEY}
ENV REACT_APP_WEBSOCKET_URL=${REACT_APP_WEBSOCKET_URL}
ENV REACT_APP_BACKEND_BASE_URL=${REACT_APP_BACKEND_BASE_URL}
ENV REACT_APP_SETTING_TRADER_URL=${REACT_APP_SETTING_TRADER_URL}
ENV REACT_APP_SIGNUP_URL=${REACT_APP_SIGNUP_URL}
ENV REACT_APP_SIGNUP_ADMIN_URL=${REACT_APP_SIGNUP_ADMIN_URL}
ENV REACT_APP_ADMIN_WALLETS_URL=${REACT_APP_ADMIN_WALLETS_URL}
ENV REACT_APP_ADMIN_TRADERS_URL=${REACT_APP_ADMIN_TRADERS_URL}
ENV REACT_APP_SETTING_URL=${REACT_APP_SETTING_URL}
ENV REACT_APP_ADMIN_ORDERS_URL=${REACT_APP_ADMIN_ORDERS_URL}
ENV REACT_APP_TRADER_DATA_RUL=${REACT_APP_TRADER_DATA_RUL}
ENV REACT_APP_TRANSFER=${REACT_APP_TRANSFER}
ENV REACT_APP_ORDER=${REACT_APP_ORDER}



COPY . .

RUN npm run build

FROM nginx:alpine

COPY --from=build /app/build /usr/share/nginx/html

COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]